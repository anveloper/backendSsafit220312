<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.backend.dao.userDao">
	<!-- 등록된 모든 사용자 조회 -->
	<select id="selectAllUsers" resultType="User">
		SELECT * FROM users
	</select>
	<!-- id로 사용자 찾기 -->
	<select id="selectUserById" resultType="User">
		SELECT * FROM users WHERE id = #{id}
	</select>
	<!-- 사용자 등록 -->
	<insert id="insertUser" parameterType="User">
		INSERT INTO users (id, password, name, email, age)
		VALUES (#{id}, #{password}, #{name}, #{email}, #{age} )
	</insert>
	<!-- 사용자 수정 -->
	<update id="updateUser" parameterType="User">
		UPDATE users
		SET password = #{password}, name = #{name}, email = #{email}, age = #{age}
		WHERE id = #{id}
	</update>
	<!-- 사용자 삭제 -->
	<delete id="deleteUser" parameterType="User">
		DELETE from users
		WHERE id = #{id}
	</delete>
	<!-- 등록된 사용자 수 -->
	<select id="userCount" resultType="String">
		SELECT COUNT(*) FROM users
	</select>
</mapper>

